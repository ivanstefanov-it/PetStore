@model PetStore.Web.ViewModels.Order.AllOrdersViewModel

<h3>List of all orders</h3>

<table class="table table-bordered table-striped">

    @foreach (var item in Model.Orders)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Status    
            </td>
            <td>
                @item.PurchaseDate
            </td>
            <td class="text-center">
                <a href="/Order/Complete/@item.Id" class="btn btn-danger btn-sm">Complete order</a>
            </td>
        </tr>
    }
</table>